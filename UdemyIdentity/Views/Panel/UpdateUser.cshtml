@model UserUpdateViewModel
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form asp-action="UpdateUser" asp-controller="Panel" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <span asp-validation-for="@Model.Name"></span>
            <input asp-for="@Model.Name" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.SurName"></label>
            <span asp-validation-for="@Model.SurName"></span>
            <input asp-for="@Model.SurName" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email"></label>
            <span asp-validation-for="@Model.Email"></span>
            <input asp-for="@Model.Email" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.PhoneNumber"></label>
            <span asp-validation-for="@Model.PhoneNumber"></span>
            <input asp-for="@Model.PhoneNumber" />
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label>Bir önceki resminiz</label>
                    <img src="~/img/@Model.PictureUrl" alt="@Model.Name" class="w-100 img-fluid" />
                </div>
                <div class="col-md-8">
                    <input type="file" asp-for="@Model.Picture" />
                </div>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
    </form>

